{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "ES2017",
    "allowJs": true,
    "jsx": "react",
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "compilerOptions": {
      "moduleResolution": "node"
    }
  },
  "include": [
    "client/**/*",
    "server/**/*",
    "types/*.ts",
    "client/declarations.d.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
